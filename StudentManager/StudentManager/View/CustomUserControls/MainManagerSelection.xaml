<UserControl x:Class="StudentManager.View.CustomUserControls.MainManagerSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentManager.View.CustomUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="350" MaxHeight="600" MaxWidth="600" >
	
	<Grid Background="White">
		<Grid.RowDefinitions>
			<RowDefinition Height="120"/>
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>

		<Label x:Name="LabelTitle" Content="(Insert School) Student Manager" FontSize="20.5" FontWeight="Bold" MinHeight="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		<Button x:Name="ButtonAllStudents" Content="View all students" FontSize="18" Margin="80 15" Grid.Row="1"/>
		<Button x:Name="ButtonAddStudent" Content="Add new student" FontSize="18" Margin="80 15" Grid.Row="2"/>
		<Button x:Name="ButtonRemoveStudent" Content="Remove student" FontSize="18" Margin="80 15" Grid.Row="3"/>
		<Button x:Name="ButtonUpdateStudent" Content="Update student" FontSize="18" Margin="80 15" Grid.Row="4"/>
	</Grid>
	
</UserControl>
