<UserControl x:Class="StudentManager.View.CustomUserControls.RemovingStudent"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"	
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:StudentManager.View.CustomUserControls"
			 mc:Ignorable="d" 
			 d:DesignHeight="450" d:DesignWidth="800">

	<Grid Background="White">
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>

		<StackPanel	Grid.Row="0" VerticalAlignment="Center">
			<StackPanel	Orientation="Vertical" Margin="10">
				<Label Content="Student	ID:" FontSize="16" />
				<TextBox Name="studentIdTextBox" FontSize="16" />
			</StackPanel>
		</StackPanel>
		
		<Button	Content="Remove	Student" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16"/>

	</Grid>
</UserControl>