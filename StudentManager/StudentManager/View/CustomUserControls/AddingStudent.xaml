<UserControl x:Class="StudentManager.View.CustomUserControls.AddingStudent"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"	
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:StudentManager.View.CustomUserControls"
			 mc:Ignorable="d" 
			 d:DesignHeight="350" d:DesignWidth="200">

	<Grid Background="White">
		<StackPanel>
			<StackPanel	Orientation="Vertical" Margin="10">
				<Label Content="Student	ID:"/>
				<TextBox Name="studentIdTextBox"/>
			</StackPanel>

			<StackPanel	Orientation="Vertical" Margin="10">
				<Label Content="Student	Name:"/>
				<TextBox Name="studentNameTextBox"/>
			</StackPanel>

			<StackPanel	Orientation="Vertical" Margin="10">
				<Label Content="Grades (comma-separated):"/>
				<TextBox Name="gradesTextBox"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</UserControl>
